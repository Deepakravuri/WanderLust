<% layout("/layouts/header") %>

<body>
  <div class="container d-flex justify-content-center align-items-center min-vh-50">
    <div class="card p-4 shadow-lg border-0 rounded" >
      <h3 class="text-center text-dark fw-bold">Edit Your Listing</h3>
      <hr class="mb-3">
      
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>

        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        </div>

        <div class="mb-3">
          <label for="filename" class="form-label fw-semibold">Filename</label>
          <input name="listing[image][filename]" value="<%= listing.image.filename %>" type="text" class="form-control" required/>
        </div>

        <div class="mb-3">
          <label for="url" class="form-label fw-semibold">Image URL</label>
          <input name="listing[image][url]" value="<%= listing.image.url %>" type="text" class="form-control" required/>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label fw-semibold">Price</label>
          <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
        </div>

        <div class="mb-3">
          <div class="mb-3">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
          </div>
        </div>
<!-- 
        <div class="mb-3">
          <label for="filter" class="form-label fw-semibold">filter</label>
          <input name="listing[filter]" value="<%= listing.filter %>" type="text" class="form-control" required/>
        </div> -->
        <button class="btn btn-dark w-100 fw-semibold">Save Changes</button> 
      </form>
    </div>
  </div>

  <style>
    .form-control {
      border-radius: 10px;
      transition: 0.3s ease-in-out;
    }
    .form-control:focus {
      border-color: #333;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
    .btn-dark:hover {
      background-color: #222;
    }
    .card {
      border-radius: 15px;
    }
  </style>
</body>
